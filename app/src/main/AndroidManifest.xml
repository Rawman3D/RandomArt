<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kabinkale.randomart">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.example.kabinkale.randomart.DrawArtService"
            android:exported="false"/>

        <receiver android:name=".MainActivity$ProgressBarReceiver">
            <intent-filter>
                <action android:name="com.example.kabinkale.randomart.DrawArtServices.ACTION_TOTAL">

                </action>
            </intent-filter>
        </receiver>

        <receiver android:name=".MainActivity$ProgressUpdateReceiver">
            <intent-filter>
                <action android:name="com.example.kabinkale.randomart.DrawArtServices.ACTION_PROGRESS">

                </action>
            </intent-filter>
        </receiver>
    </application>

</manifest>